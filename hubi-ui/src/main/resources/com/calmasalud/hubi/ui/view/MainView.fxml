<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.calmasalud.hubi.ui.controller.MainController">

    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <children>
                <Button fx:id="btnCatalogo" maxWidth="1.7976931348623157E308"
                        text="GESTOR DE CATÁLOGO" onAction="#handleMenuCatalogo">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="btnInventario" maxWidth="1.7976931348623157E308"
                        text="INVENTARIO" onAction="#handleMenuInventario">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="btnReportes" maxWidth="1.7976931348623157E308"
                        text="REPORTES Y SEGUIMIENTO" onAction="#handleMenuReportes" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="mainContentArea" style="-fx-background-color: #ffffff;"
                   BorderPane.alignment="CENTER" />
    </center>

</BorderPane>