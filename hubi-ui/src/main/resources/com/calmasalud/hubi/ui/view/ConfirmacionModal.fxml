<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.ConfirmacionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="lblMensaje" alignment="CENTER" prefWidth="360.0" text="¿Desea eliminar el objeto [Nombre del Objeto] de manera permanente?" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="30.0">
            <children>
                <Button fx:id="btnConfirmar" defaultButton="true" mnemonicParsing="false" onAction="#handleConfirmar" prefWidth="100.0" style="-fx-background-color: #d9534f;" text="Sí, Eliminar" textFill="WHITE" />
                <Button fx:id="btnCancelar" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelar" prefWidth="100.0" style="-fx-background-color: #5bc0de;" text="Cancelar" textFill="WHITE" />
            </children>
        </HBox>
    </children>
</VBox>
