<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="180.0" minWidth="350.0" prefHeight="180.0" prefWidth="350.0" spacing="15.0" styleClass="modal-dialog" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.AddStockController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="lblHeader" styleClass="section-label" text="AGREGAR STOCK " />

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="Cantidad a Agregar:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtCantidad" promptText="1" text="1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        </GridPane>

        <Label fx:id="lblProductoNombre" style="-fx-font-size: 0.9em; -fx-text-fill: -fx-color-text-muted;" text="(Producto: Nombre seleccionado)" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
            <Button fx:id="btnCancelar" styleClass="secondary-action-button" text="CANCELAR" onAction="#handleCancel" cancelButton="true"/>
            <Button fx:id="btnAceptar" styleClass="action-button" text="ACEPTAR" onAction="#handleAccept" defaultButton="true"/>
        </HBox>
    </children>
</VBox>
