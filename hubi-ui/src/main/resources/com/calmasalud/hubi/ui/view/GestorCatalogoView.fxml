<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.55" prefHeight="700.0" prefWidth="1000.0" styleClass="module-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.CatalogManagerController">
    <items>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="txtBusqueda" promptText="Buscar en el repositorio..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnActualizar" mnemonicParsing="false" onAction="#refrescarVistaCatalogo" text="Actualizar" />
                    </children>
                </HBox>
                <Label style="-fx-font-weight: bold;" text="Repositorio Master" />

                <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS">
                    <items>
                        <AnchorPane minHeight="0.0" minWidth="0.0">
                            <children>
                                <TreeView fx:id="folderTreeView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>

                        <AnchorPane minHeight="0.0" minWidth="0.0">
                            <children>
                                <TableView fx:id="fileTableView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                                        <TableColumn fx:id="colTamaño" prefWidth="120.0" text="Código Único" />
                                        <TableColumn fx:id="colFechaMod" prefWidth="150.0" text="Fecha Modificación" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#handleAgregarClick" styleClass="action-button" text="AGREGAR" />
                        <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#handleEliminarClick" styleClass="action-button" text="ELIMINAR" />
                    </children>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="15.0">
            <children>
                <Label fx:id="lblNombreArchivo" styleClass="section-title" text="(Seleccione un archivo)" />
                <StackPane fx:id="visor3DPlaceholder" minHeight="250.0" prefHeight="300.0" styleClass="viewer-3d-placeholder" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="(Visor 3D Interactivo)" />
                    </children>
                </StackPane>
                <Label text="PARÁMETROS" styleClass="section-title" />

                <VBox spacing="5.0">
                    <Label styleClass="parameter-label" text="FILAMENTO SELECCIONADO:" />
                    <ComboBox fx:id="cmbFilamento" prefWidth="300.0" promptText="Seleccione Filamento (T0, T1...)" />
                </VBox>


                <GridPane hgap="10.0" vgap="8.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="150.0" prefWidth="160.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="50.0" prefWidth="60.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label styleClass="parameter-label" text="TIPO FILAMENTO:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="paramTipoFilamento" editable="false" promptText="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="parameter-label" text="DENSIDAD:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="paramDensidad" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="g/cm³" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <Label styleClass="parameter-label" text="DIÁMETRO:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="paramDiametro" editable="false" promptText="1.75" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="mm" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                        <Label styleClass="parameter-label" text="PESO USADO:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="paramPeso" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="gr" GridPane.columnIndex="2" GridPane.rowIndex="3" />

                        <Label styleClass="parameter-label" text="LARGO USADO:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="paramLargo" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="m" GridPane.columnIndex="2" GridPane.rowIndex="4" />


                        <Label styleClass="parameter-label" text="TIEMPO IMPRESIÓN:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="paramTiempo" editable="false" promptText="hh:mm:ss" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label styleClass="parameter-label" text="ALTURA DE CAPA:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <TextField fx:id="paramAlturaCapa" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="mm" GridPane.columnIndex="2" GridPane.rowIndex="6" />

                        <Label styleClass="parameter-label" text="PRECIO POR GRAMO:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                        <TextField fx:id="paramPrecioPorGramo" promptText="18.5" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        <Label text="ARS/gr" GridPane.columnIndex="2" GridPane.rowIndex="7" />

                        <Label styleClass="parameter-label" text="COSTO TOTAL:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                        <TextField fx:id="paramCosto" editable="false" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                        <Label text="ARS ($)" GridPane.columnIndex="2" GridPane.rowIndex="8" />
                    </children>
                </GridPane>
                <Region VBox.vgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
        </VBox>
    </items>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</SplitPane>