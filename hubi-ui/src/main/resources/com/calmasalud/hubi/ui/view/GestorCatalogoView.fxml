<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TreeTableColumn?>

<SplitPane dividerPositions="0.55" prefHeight="700.0" prefWidth="1000.0"
           styleClass="module-container"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.calmasalud.hubi.ui.controller.CatalogManagerController">

    <items>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="txtBusqueda" promptText="Buscar en el repositorio..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnActualizar" mnemonicParsing="false" text="Actualizar" />
                    </children>
                </HBox>

                <Label text="Repositorio Master" style="-fx-font-weight: bold;" />
                <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS">
                    <items>
                        <AnchorPane minHeight="0.0" minWidth="0.0">
                            <children>
                                <TreeView fx:id="folderTreeView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>

                        <AnchorPane minHeight="0.0" minWidth="0.0">
                            <children>
                                <TableView fx:id="fileTableView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="colNombre" prefWidth="100.0" text="Nombre" />
                                        <TableColumn fx:id="colTamaño" prefWidth="75.0" text="Código Único" />
                                        <TableColumn fx:id="colFechaMod" prefWidth="120.0" text="Fecha Modificación" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnAgregar" mnemonicParsing="false"
                                onAction="#handleAgregarClick"
                                styleClass="action-button" text="AGREGAR" />
                        <Button fx:id="btnEliminar" mnemonicParsing="false"
                                styleClass="action-button" text="ELIMINAR" />
                        <Button fx:id="btnExtraer" mnemonicParsing="false"
                                styleClass="action-button" text="EXTRAER PARÁMETROS" />
                    </children>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="15.0">
            <children>
                <Label fx:id="lblNombreArchivo" styleClass="section-title" text="SOME_FILE" />

                <StackPane fx:id="visor3DPlaceholder" minHeight="300.0"
                           styleClass="viewer-3d-placeholder" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="(Visor 3D Interactivo)" />
                    </children>
                </StackPane>

                <Label text="PARÁMETROS" styleClass="section-title" />
                <GridPane hgap="10.0" vgap="8.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="PESO:" GridPane.rowIndex="0" />
                        <TextField fx:id="paramPeso" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="gr" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                        <Label text="LARGO DE FILAMENTO:" GridPane.rowIndex="1" />
                        <TextField fx:id="paramLargo" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="cm" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <Label text="TIPO DE FILAMENTO:" GridPane.rowIndex="2" />
                        <TextField fx:id="paramTipoFilamento" editable="false" promptText="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="TEMPERATURA:" GridPane.rowIndex="3" />
                        <TextField fx:id="paramTemperatura" editable="false" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="°c" GridPane.columnIndex="2" GridPane.rowIndex="3" />

                        <Label text="VELOCIDAD DE IMPRESIÓN:" GridPane.rowIndex="4" />
                        <TextField fx:id="paramVelocidad" editable="false" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="mm/s" GridPane.columnIndex="2" GridPane.rowIndex="4" />

                        <Label text="TIEMPO DE IMPRESIÓN:" GridPane.rowIndex="5" />
                        <TextField fx:id="paramTiempo" editable="false" promptText="hh:mm:ss" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="DENSIDAD DE MATERIAL:" GridPane.rowIndex="6" />
                        <TextField fx:id="paramDensidad" editable="false" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="(%)" GridPane.columnIndex="2" GridPane.rowIndex="6" />

                        <Label text="ALTURA DE CAPA:" GridPane.rowIndex="7" />
                        <TextField fx:id="paramAlturaCapa" editable="false" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        <Label text="mm" GridPane.columnIndex="2" GridPane.rowIndex="7" />

                        <Label text="COSTO:" GridPane.rowIndex="8" />
                        <TextField fx:id="paramCosto" editable="false" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                        <Label text="ARS ($)" GridPane.columnIndex="2" GridPane.rowIndex="8" />
                    </children>
                </GridPane>
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </VBox>
    </items>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</SplitPane>