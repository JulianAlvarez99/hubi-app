<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<SplitPane dividerPositions="0.5" prefHeight="700.0" prefWidth="1000.0" styleClass="module-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.InventarioController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <items>
        <VBox spacing="10.0" alignment="TOP_CENTER" SplitPane.resizableWithParent="true">
            <Label styleClass="section-title" text="GESTIÓN DE STOCK DE PRODUCTOS TERMINADOS (CATÁLOGO)" />

            <TreeTableView fx:id="productStockTable" VBox.vgrow="ALWAYS" prefHeight="500">
                <columns>
                    <TreeTableColumn fx:id="colProductoNombre" text="Producto" prefWidth="200.0" />
                    <TreeTableColumn fx:id="colProductoCodigo" text="Código Maestro (RF8)" prefWidth="100.0" />
                    <TreeTableColumn fx:id="colProductoDisponible" text="Unidades (RF4)" prefWidth="100.0" />
                    <TreeTableColumn fx:id="colProductoPrecio" text="Valor" prefWidth="100.0" />
                </columns>
            </TreeTableView>
            <Label styleClass="section-subtitle" text="Acciones sobre el Stock Final (Producto Terminado)" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="AGREGAR STOCK FINAL" styleClass="action-button" onAction="#handleAddProductStock" />
                <Button text="ELIMINAR STOCK PRODUCTO" styleClass="danger-button" onAction="#handleDeleteProductStock" />
            </HBox>

            <Label styleClass="section-subtitle" text="Acciones sobre el Stock Granular (Piezas)" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="AGREGAR PIEZA " styleClass="action-button" onAction="#handleModifyPieceStock" />
                <Button text="ELIMINAR STOCK PIEZA " styleClass="danger-button" onAction="#handleDeleteStockColorUnit" />
            </HBox>
        </VBox>

        <VBox spacing="10.0" alignment="TOP_CENTER" SplitPane.resizableWithParent="true">
            <Label styleClass="section-title" text="GESTIÓN DE STOCK DE INSUMOS" />

            <AnchorPane fx:id="supplyPlaceholder" VBox.vgrow="ALWAYS" prefHeight="500" />

            <HBox alignment="CENTER" spacing="10.0">
                <Button text="AGREGAR INSUMO (RF5)" styleClass="action-button" onAction="#handleAddSupply" />
                <Button text="ELIMINAR INSUMO" styleClass="danger-button" onAction="#handleRemoveSupply" />
                <Button text="MODIFICAR" styleClass="modify-button" onAction="#handleModifySupply" />
            </HBox>
        </VBox>
    </items>
</SplitPane>