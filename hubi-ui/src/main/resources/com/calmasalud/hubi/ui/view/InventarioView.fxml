<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="contentArea" prefHeight="700.0" prefWidth="1000.0" styleClass="module-container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.InventarioController">

    <VBox fx:id="productContentArea" alignment="TOP_CENTER" managed="true" spacing="10.0" styleClass="view-anchor-pane" visible="true">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label styleClass="section-title" text="GESTIÓN DE STOCK DE PRODUCTOS TERMINADOS Y PIEZAS" />

        <TreeTableView fx:id="productStockTable" prefHeight="500" VBox.vgrow="ALWAYS">
            <columns>
                <TreeTableColumn fx:id="colProductoNombre" prefWidth="250.0" text="Producto" />
                <TreeTableColumn fx:id="colProductoCodigo" prefWidth="150.0" text="Código Maestro" />
                <TreeTableColumn fx:id="colProductoDisponible" prefWidth="100.0" text="Unidades" />
                <TreeTableColumn fx:id="colProductoPrecio" prefWidth="100.0" text="Valor" />
            </columns>
            <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TreeTableView>

        <Label styleClass="section-subtitle" text="Acciones sobre el Stock Final (Producto Terminado)" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleAddProductStock" prefHeight="27.0" prefWidth="250.0" styleClass="action-button" text="AGREGAR STOCK FINAL" />
            <Button onAction="#handleDeleteProductStock" prefHeight="27.0" prefWidth="250.0" styleClass="danger-button" text="ELIMINAR STOCK PRODUCTO" />
        </HBox>

        <Label styleClass="section-subtitle" text="Acciones sobre el Stock Granular (Piezas)" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleModifyPieceStock" prefHeight="27.0" prefWidth="250.0" styleClass="action-button" text="AGREGAR PIEZA" />
            <Button onAction="#handleDeleteStockColorUnit" prefHeight="27.0" prefWidth="250.0" styleClass="danger-button" text="ELIMINAR STOCK PIEZA POR COLOR" />
        </HBox>
    </VBox>

    <VBox fx:id="supplyContentArea" alignment="TOP_CENTER" managed="false" spacing="10.0" styleClass="view-anchor-pane" visible="false">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label styleClass="section-title" text="GESTIÓN DE STOCK DE INSUMOS (FILAMENTO)" />
        <TableView fx:id="tablaInsumos" prefHeight="420.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colInsumoCodigo" prefWidth="120.0" text="Código/Marca" />
                <TableColumn fx:id="colInsumoNombre" prefWidth="150.0" text="Nombre" />
                <TableColumn fx:id="colInsumoTipo" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colInsumoColor" prefWidth="150.0" text="Color" />
                <TableColumn fx:id="colInsumoStock" prefWidth="120.0" text="Stock (g)" />
                <TableColumn fx:id="colInsumoUmbral" prefWidth="120.0" text="Umbral Alerta (g)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnAgregarInsumo" mnemonicParsing="false" onAction="#handleManageSupplyStock" prefHeight="27.0" prefWidth="250.0" styleClass="action-button" text="Añadir Insumo" />
            <Button fx:id="btnModificarInsumo" mnemonicParsing="false" onAction="#handleManageSupplyStock" prefHeight="27.0" prefWidth="250.0" styleClass="modify-button" text="Modificar Insumo" />
            <Button fx:id="btnDescartarStock" mnemonicParsing="false" onAction="#handleRemoveSupplyStock" prefHeight="27.0" prefWidth="250.0" styleClass="danger-button" text="Descartar Stock" />
            <Button fx:id="btnEliminarInsumo" mnemonicParsing="false" onAction="#handleDeleteSupplyPermanently" prefHeight="27.0" prefWidth="250.0" styleClass="danger-button" text="Eliminar Insumo" />
        </HBox>
        <Label fx:id="lblSelectionHint" alignment="CENTER" text="Doble clic en la tabla para modificar datos del insumo." />
    </VBox>
</StackPane>
