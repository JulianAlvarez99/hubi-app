<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" styleClass="modal-dialog" spacing="15.0" minWidth="450.0" prefWidth="550.0" minHeight="450.0" prefHeight="480.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.TipoCargaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
<!--        {/* === CAMBIO AQUÍ: Reestructurada Sección 1 === */}-->
        <Label styleClass="section-label" text="1. Seleccione o Arrastre Archivo de Impresión:" />
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Button fx:id="btnSeleccionarArchivo" styleClass="secondary-action-button" text="Seleccionar Archivo..." onAction="#handleSeleccionarArchivo" />
            <Label fx:id="lblArchivoSeleccionado" text="Ningún archivo seleccionado." maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
<!--        {/* Indicador de extensiones */}-->
        <Label text="(.stl, .3mf, .gcode)" style="-fx-font-size: 11px; -fx-text-fill: -fx-color-text-muted;"/>

<!--        {/* -&#45;&#45; NUEVA ZONA DRAG & DROP -&#45;&#45; */}-->
        <VBox fx:id="dropZone" styleClass="drop-zone" alignment="CENTER" VBox.vgrow="SOMETIMES" minHeight="80.0">
            <children>
                <Label styleClass="drop-zone-label" text="o arrastre y suelte el archivo aquí" textAlignment="CENTER" wrapText="true"/>
            </children>
            <VBox.margin>
                <Insets top="5.0" bottom="5.0"/>
            </VBox.margin>
        </VBox>
<!--        {/* -&#45;&#45; FIN ZONA DRAG & DROP -&#45;&#45; */}-->

        <Separator prefWidth="200.0" />

        <Label styleClass="section-label" text="2. Seleccione qué tipo de objeto es:" />
        <HBox spacing="30.0">
            <fx:define>
                <ToggleGroup fx:id="grupoTipoObjeto" />
            </fx:define>
            <RadioButton fx:id="radioPieza" text="PIEZA (Asociar a Producto Existente)" toggleGroup="$grupoTipoObjeto" />
            <RadioButton fx:id="radioProducto" text="PRODUCTO (Nuevo)" toggleGroup="$grupoTipoObjeto" selected="true" />
            <padding>
                <Insets left="5.0" />
            </padding>
        </HBox>

        <Separator prefWidth="200.0" />

        <Label styleClass="section-label" text="3. Asigne Nombre/Directorio:" />
        <GridPane hgap="10.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="150.0" minWidth="150.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="NOMBRE/DIRECTORIO:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <HBox spacing="5.0" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <TextField fx:id="txtNombre" promptText="Nombre del Producto o Ruta" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnBuscarDirectorio" text="..." onAction="#onBuscarProductoClicked" visible="false" managed="false"/>
            </HBox>
        </GridPane>

        <Region VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="btnCancelar" styleClass="secondary-action-button" text="CANCELAR" onAction="#onCancelarClicked" cancelButton="true"/>
            <Button fx:id="btnCargar" styleClass="action-button" text="CARGAR" onAction="#onCargarClicked" defaultButton="true"/>
        </HBox>
    </children>
</VBox>