<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="400.0" minWidth="600.0" spacing="15.0" styleClass="modal-dialog" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.CompositionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="section-label" text="DEFINIR COMPOSICIÓN DEL PRODUCTO (BOM)" />
        <Label fx:id="lblProductoNombre" style="-fx-font-weight: bold;" text="Producto: [Nombre del Producto]" />
        <Label prefHeight="24.0" prefWidth="557.0" text="Indique cuántas unidades de cada pieza se requieren para ensamblar un Producto Final:" />

        <TableView fx:id="pieceCompositionTable" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNombrePieza" prefWidth="300.0" text="Pieza (Nombre Base)" />
                <TableColumn fx:id="colCantidadRequerida" prefWidth="150.0" text="Cantidad Requerida" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnGuardar" defaultButton="true" minWidth="170.0" onAction="#handleSave" styleClass="action-button" text="GUARDAR COMPOSICIÓN">
            <font>
               <Font size="11.0" />
            </font></Button>
            <Button fx:id="btnCancelar" cancelButton="true" minWidth="110.0" onAction="#handleCancel" styleClass="secondary-action-button" text="CANCELAR">
            <font>
               <Font size="11.0" />
            </font></Button>
        </HBox>
    </children>
</VBox>
