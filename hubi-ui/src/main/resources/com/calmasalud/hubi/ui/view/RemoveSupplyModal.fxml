<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="444.0" spacing="20.0" styleClass="modal-dialog" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.RemoveSupplyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label styleClass="section-label" text="Descartar / Eliminar Stock de Insumo" />
    <Label fx:id="lblInsumoInfo" text="Descartando: [TIPO] [COLOR] - Stock Disponible: [X]g" wrapText="true" />
    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <Label text="Cantidad a Descartar (g):" GridPane.rowIndex="0" />
        <TextField fx:id="txtCantidad" promptText="Ej: 50.00" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="btnDescartar" minWidth="130.0" mnemonicParsing="false" onAction="#handleDescartar" styleClass="danger-action-button" text="Descartar Stock" />
        <Button fx:id="btnCancelar" minWidth="130.0" mnemonicParsing="false" onAction="#handleCancelar" styleClass="secondary-action-button" text="Cancelar" />
    </HBox>
</VBox>
