<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="371.0" prefWidth="450.0" spacing="10.0" styleClass="modal-dialog" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.AddSupplyController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <Label fx:id="lblTitulo" styleClass="section-label" text="Gestionar Stock de Filamento" />

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
        <content>
            <VBox spacing="10.0" style="-fx-background-color: transparent;">
                <padding>
                    <Insets bottom="5.0" right="10.0" top="5.0" />
                </padding>

                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Label text="Nombre/DescripciÃ³n:" GridPane.rowIndex="0" />
                    <TextField fx:id="txtName" promptText="Ej: Filamento PLA Amarillo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Tipo de Filamento:" GridPane.rowIndex="1" />
                    <ComboBox fx:id="comboTipoFilamento" maxWidth="1.7976931348623157E308" promptText="Seleccione..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Color:" GridPane.rowIndex="2" />
                    <TextField fx:id="txtColorFilamento" promptText="Ej: Amarillo" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label fx:id="lblCantidad" text="Cantidad (g):" GridPane.rowIndex="3" />
                    <TextField fx:id="txtCantidad" promptText="Ej: 1000" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Umbral Alerta (g):" GridPane.rowIndex="4" />
                    <TextField fx:id="txtUmbralAlerta" promptText="Ej: 50" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>
            </VBox>
        </content>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="btnGuardar" defaultButton="true" minWidth="130.0" mnemonicParsing="false" onAction="#handleGuardar" styleClass="action-button" text="Guardar Cambios" />
        <Button fx:id="btnCancelar" cancelButton="true" minWidth="130.0" mnemonicParsing="false" onAction="#handleCancelar" styleClass="secondary-action-button" text="Cancelar" />
    </HBox>
</VBox>
