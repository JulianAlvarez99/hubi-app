<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="modal-pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmasalud.hubi.ui.controller.RemoveProductStockController" >
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="680.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label styleClass="header-label" text="Eliminar Stock de Producto Fabricado" textFill="#2d3748">
                    <font>
                        <Font name="MavenPro-Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="productNameLabel" text="Producto Seleccionado: [Nombre del Producto]" textFill="#2d3748">
                    <font>
                        <Font name="MavenPro-Medium" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Cantidad de Productos Finales a Eliminar (Unidades):" />
                        <TextField fx:id="quantityField" prefWidth="80.0" promptText="Ej: 5" />
                    </children>
                </HBox>
                <Label text="Seleccione el Color de Cada Pieza Individual a Descontar:" textFill="#2d3748">
                    <font>
                        <Font name="MavenPro-Medium" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <TableView fx:id="deductionTable" prefHeight="280.0" prefWidth="680.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPieceIndex" prefWidth="50.0" text="#" />
                        <TableColumn fx:id="colPieceName" prefWidth="180.0" text="Pieza Base" />
                        <TableColumn fx:id="colMasterCode" prefWidth="120.0" text="Cód. Maestro Pieza" />
                        <TableColumn fx:id="colSelectedColor" prefWidth="150.0" text="Color a Descontar" />
                        <TableColumn fx:id="colStockAvailable" prefWidth="100.0" text="Stock (Este Color)" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" styleClass="secondary-action-button" text="Cancelar" />
                        <Button mnemonicParsing="false" onAction="#handleConfirmDeduction" prefWidth="180.0" styleClass="danger-button" text="Confirmar Eliminación Stock" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>